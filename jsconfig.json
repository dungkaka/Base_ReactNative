{
    "compilerOptions": {
        "jsx": "react",
        // "checkJs": true,
        "baseUrl": "./src",
        "sourceMap": true,
        "strict": true,
        "paths": {
            "@screen/*": ["screen/*"],

            "@configs/*": ["configs/*"],
            "@theme": ["theme/index"],
            "@theme/*": ["theme/*"],

            "@hooks/*": ["utils/hooks/*"],
            "@utils/*": ["utils/*"],

            "@lib/*": ["lib/*"],
            "@common-components/*": ["components/common/*"],
            "@components/*": ["components/*"],

            "@services/*": ["services/*"],

            "@redux/*": ["redux/*"],

            "@navigation/*": ["navigation/*"],

            "@assets/*": ["assets/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}

